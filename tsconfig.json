{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowJs": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "lib": [
    "es2016",
    "dom"
  ],
  "include": [
    "source/**/*"
  ],
  "exclude": [
    "./test/**/*.spec.ts"
  ]
}